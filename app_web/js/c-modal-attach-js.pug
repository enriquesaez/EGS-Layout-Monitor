script.
    var modal = document.getElementById("myModalattach");
    var btn = document.getElementById("myBtnattach");
    var span = document.getElementsByClassName("closeattach")[0];
    btn.onclick = function() {
        modal.style.display = "block";
    }
    span.onclick = function() {
        modal.style.display = "none";
    }
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }